{
  "manifest_version": 3,
  "name": "Faceit Nerdalyzer",
  "version": "1.0.0",
  "description": "Display team map stats in the faceit match lobby",
  "author": "WTFender",
  "homepage_url": "https://wtfender.com",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/128.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.faceit.com/*"
      ],
      "js": [
        "faceit-nerdalyzer.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; worker-src 'none'"
  },
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },
  "permissions": [
    "storage"
  ]
}